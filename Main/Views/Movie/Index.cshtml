@{
    ViewData["Title"] = "Movies";
}

@model Models.ViewModels.MovieCategoryVM

<div class="card m-3" style="border-radius: .5rem;">
    <div class="card-header bg-primary" style="border-top-left-radius: .5rem; border-top-right-radius: .5rem;">
        <div class="col-12 text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-12 text-end"><a asp-controller="Movie" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-square"></i>&nbsp; Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th>Title</th>
                    <th>Release Date</th>
                    <th>Category</th>
                    <th>Actors</th>
                    <th>Rating</th>
                    <th>Controls</th>
                </tr>
            </thead>
            <tbody>
                @if (Model is not null)
                {
                    foreach (var item in Model.Movies)
                    {
                        <tr class="table-dark">
                            <td>@item.Title</td>
                            <td>@item.ReleaseDate</td>
                            <td>@if (item.Category is not null)
                                {
                                    @item.Category.Name
                                }</td>
                            <td>@item.Actors.Count</td>
                            <td>@item.Rating</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id"
                                        class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-fill">Edit</i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                                        class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3-fill">Delete</i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
