@{
    ViewData["Title"] = "Categories";
}
@model IEnumerable<MVCPractice.Models.Category>

<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-square"></i>&nbsp; Add New
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-light">
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr class="table-dark">
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>